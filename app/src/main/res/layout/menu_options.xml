<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidtutorialpoint.googlemapsapp.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_weight="0.30">

        <TextView
            android:id="@+id/txt_map"
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            android:text="NAVIGATE"
            android:textAlignment="center"
            android:textColor="@color/place_autocomplete_prediction_primary_text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="0.66" />

        <TextView
            android:id="@+id/txt_routes"
            android:layout_width="wrap_content"
            android:layout_height="109dp"
            android:text="NEW ROUTES"
            android:textAlignment="center"
            android:textColor="@color/place_autocomplete_prediction_primary_text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="0.38" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.62">

        <ImageButton
            android:id="@+id/btn_map_activity"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_weight="0.82"
            android:adjustViewBounds="false"
            android:background="#ffffff"
            android:src="@drawable/navigate" />

        <ImageButton
            android:id="@+id/btn_ok"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:src="@drawable/saverute" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_weight="0.33"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_contact"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="1.09"
            android:text="AGENDA"
            android:textAlignment="center"
            android:textColor="@color/place_autocomplete_prediction_primary_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_config"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.92"
            android:text="SETTINGS"
            android:textAlignment="center"
            android:textColor="@color/place_autocomplete_prediction_primary_text"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.62">

        <ImageButton
            android:id="@+id/btn_contact"
            android:layout_width="190dp"
            android:layout_height="268dp"
            android:layout_weight="0.65"
            android:adjustViewBounds="false"
            android:background="@color/colorPrimary"
            android:src="@drawable/agenda" />

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="190dp"
            android:layout_height="268dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/settings"
            android:layout_weight="0.65" />
    </LinearLayout>

</LinearLayout>
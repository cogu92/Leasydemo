<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgsetting"
            android:layout_width="132dp"
            android:layout_height="88dp"
            android:layout_weight="0.01"
            android:src="@drawable/configuration_btn1" />

        <RelativeLayout
            android:layout_width="282dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="73dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_weight="0.01"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_call" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.16">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="49dp"
                android:ems="10"

                android:inputType="phone"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/txt_font"
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Font Size"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="57dp"
        android:layout_weight="0.16"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_big_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.43"
            android:background="@color/colorPrimary"
            android:src="@drawable/btn_font" />

        <ImageButton
            android:id="@+id/btn_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.43"
            android:background="@color/colorPrimary"

            android:src="@drawable/btn_font_short" />

    </LinearLayout>
</LinearLayout>